<?xml version="1.0" encoding="utf-8"?>

<!-- AK-47 SpecOps CE Patch -->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
                    <defName>Gun_aox0_SpecAK</defName>
                    <statBases>
                        <Mass>1.5</Mass>
                        <RangedWeapon_Cooldown>0.0</RangedWeapon_Cooldown>
                        <SightsEfficiency>2</SightsEfficiency>
                        <ShotSpread>0.01</ShotSpread>
                        <SwayFactor>0.5</SwayFactor>
                        <Bulk>5.0</Bulk>
                        <WorkToMake>1000</WorkToMake>
                    </statBases>
                    <costList>
                        <Steel>200</Steel>
                    </costList>
                    <Properties>
                        <recoilAmount>1.0</recoilAmount>
                        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                        <hasStandardCommand>true</hasStandardCommand>
                        <defaultProjectile>Bullet_556x45mmNATO_FMJ</defaultProjectile>
                        <warmupTime>0.1</warmupTime>
                        <range>65</range>
                        <burstShotCount>7</burstShotCount>
                        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                        <soundCast>Shot_AssaultRifle</soundCast>
                        <soundCastTail>GunTail_Medium</soundCastTail>
                        <muzzleFlashScale>1.0</muzzleFlashScale>
                    </Properties>
                    <AmmoUser>
                        <magazineSize>45</magazineSize>
                        <reloadTime>1.5</reloadTime>
                        <ammoSet>AmmoSet_762x51mmNATO</ammoSet>
                    </AmmoUser>
                    <FireModes>
                        <aimedBurstShotCount>10</aimedBurstShotCount>
                        <aiUseBurstMode>TRUE</aiUseBurstMode>
                        <aiAimMode>AimedShot</aiAimMode>
                    </FireModes>
                    <weaponTags>
                        <li>CE_AI_Rifle</li>
                    </weaponTags>
                    <researchPrerequisite>PrecisionRifling</researchPrerequisite>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>

