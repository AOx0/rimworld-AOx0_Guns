<?xml version="1.0" encoding="utf-8"?>

<!-- Golden AK-47 CE Patch -->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
                    <defName>Gun_aox0_GoldenAK</defName>
                    <statBases>
                        <Mass>1.5</Mass>
                        <RangedWeapon_Cooldown>0.0</RangedWeapon_Cooldown>
                        <SightsEfficiency>2</SightsEfficiency>
                        <ShotSpread>0.01</ShotSpread>
                        <SwayFactor>0.5</SwayFactor>
                        <Bulk>5.0</Bulk>
                        <WorkToMake>400</WorkToMake>
                    </statBases>
                    <costList>
                        <Steel>20</Steel>
                    </costList>
                    <Properties>
                        <recoilAmount>1.0</recoilAmount>
                        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                        <hasStandardCommand>true</hasStandardCommand>
                        <defaultProjectile>Bullet_556x45mmNATO_FMJ</defaultProjectile>
                        <warmupTime>0.1</warmupTime>
                        <range>60</range>
                        <burstShotCount>5</burstShotCount>
                        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                        <soundCast>Shot_AssaultRifle</soundCast>
                        <soundCastTail>GunTail_Medium</soundCastTail>
                        <muzzleFlashScale>1.0</muzzleFlashScale>
                    </Properties>
                    <AmmoUser>
                        <magazineSize>45</magazineSize>
                        <reloadTime>1.5</reloadTime>
                        <ammoSet>AmmoSet_762x51mmNATO</ammoSet>
                    </AmmoUser>
                    <FireModes>
                        <aimedBurstShotCount>5</aimedBurstShotCount>
                        <aiUseBurstMode>TRUE</aiUseBurstMode>
                        <aiAimMode>AimedShot</aiAimMode>
                    </FireModes>
                    <weaponTags>
                        <li>CE_AI_Rifle</li>
                    </weaponTags>
                    <researchPrerequisite>PrecisionRifling</researchPrerequisite>
                </li>

                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="Gun_aox0_GoldenAK"]</xpath>
                    <value>
                        <li Class="CombatExtended.GunDrawExtension">
                            <DrawSize>1.16,1.25</DrawSize>
                            <DrawOffset>0.05,-0.07</DrawOffset>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Gun_aox0_GoldenAK"]/tools</xpath>
                    <value>
                        <tools>
                            <li Class="CombatExtended.ToolCE">
                                <label>stock</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>9</power>
                                <cooldownTime>1.55</cooldownTime>
                                <chanceFactor>1.5</chanceFactor>
                                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>barrel</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>9</power>
                                <cooldownTime>1.02</cooldownTime>
                                <armorPenetrationBlunt>2.630</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>muzzle</label>
                                <capacities>
                                    <li>Poke</li>
                                </capacities>
                                <power>9</power>
                                <cooldownTime>1.55</cooldownTime>
                                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
                            </li>
                        </tools>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>

